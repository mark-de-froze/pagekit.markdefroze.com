<%= simple_form_for(resource,
                    as: resource_name,
                    url: session_path(resource_name)) do |f| %>
<div class="uk-background-default">
  <%= f.input :email, required: false, autofocus: true, input_html: { class: 'uk-margin-medium-top uk-input uk-form-blank'} %>
  <%= f.input :password, required: false, input_html: { class: 'uk-input uk-form-blank'} %>

  <%= f.button :submit, 'Login', class: 'uk-button uk-button-primary uk-button-large uk-width-1-1'%>
</div>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
<% end %>

