<article class="uk-comment" id="comment<%=comment.id%>">
  <header class="uk-comment-header uk-grid-medium uk-flex-middle" uk-grid>
    <div class="uk-width-auto">
      <img class="uk-comment-avatar uk-border-circle" src="<%= comment.gravatar_url %>" width="40" height="40" alt="">
    </div>
    <div class="uk-width-expand">
      <h4 class="uk-comment-title uk-margin-remove"><a class="uk-link-reset" href="#"><%= comment.from_name %></a></h4>
      <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top uk-margin-remove-bottom">
        <li><a href="#"><%= time_ago_in_words(comment.created_at) %> <%=t(:ago, default: 'ago')%></a></li>
      </ul>
    </div>
  </header>
  <div class="uk-comment-body">
    <p><%= comment.comment %></p>
  </div>
</article>
