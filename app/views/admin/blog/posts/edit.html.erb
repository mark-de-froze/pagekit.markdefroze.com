<% content_for :links do %>
    <%= link_to t(:back), blog_posts_path, class: 'uk-button uk-button-default' %>
    <%= link_to t(:show), @blog_post, class: 'uk-button uk-button-default' %>
    <%= link_to t(:destroy), @blog_post, method: :delete, class: 'uk-button uk-button-danger', data: { confirm: t(:confirm) } %>
<% end %>

<%= render 'form', blog_post: @blog_post %>
