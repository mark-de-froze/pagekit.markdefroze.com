<%= simple_form_for @site_page, html: {class: 'uk-form-stacked'}, wrapper: :form do |f| %>
  <legend class="uk-legend">
    <%= t('.title', default: action_name.titleize + ' Page')%>
    <div class="uk-align-right">
      <%= yield :links %>
      <%= f.button :submit, class: 'uk-button uk-button-primary' %>
    </div>
  </legend>
  <%= f.error_notification %>

  <div>
    <ul class="uk-width-1-1" uk-tab>
      <li><a href="#"><%=t(:content)%></a></li>
      <li><a href="#"><%=t(:meta)%></a></li>
    </ul>

    <ul class="uk-switcher uk-margin">
      <li>
        <div uk-grid>
          <div class="uk-width-3-4">
            <%= f.input :title %>
            <%= f.input :content %>
          </div>
          <div class="uk-width-1-4">
            <%= f.input :api_key, collection: @api_keys, value_method: :api_key, prompt: :translate, input_html: {class: 'uk-select'}  %>
            <%= f.input :slug if @site_page.slug.present? %>
            <%= f.input :status, collection: @site_page.statuses, prompt: :translate, input_html: {class: 'uk-select'} %>
            </div>
        </div>
      </li>
      <li>
        <%= f.input :metatitle %>
        <%= f.input :metakeywords %>
        <%= f.input :metadescription %>
      </li>
    </ul>
  </div>
<% end %>

