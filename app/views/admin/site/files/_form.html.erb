<%= simple_form_for @site_file, wrapper: :form do |f| %>
  <legend class="uk-legend">
    <%= t('.'+action_name+'.title', default: action_name.titleize + ' File')%>
    <div class="uk-align-right">
      <%= yield :links %>
      <%= f.button :submit, class: 'uk-button uk-button-primary' %>
    </div>
  </legend>
  <%= f.error_notification %>

  <%= f.input :api_key, collection: @api_keys, value_method: :api_key, prompt: :translate, input_html: {class: 'uk-select'}  %>
  <%= f.input :name_key, input_html: {readonly: true} %>
  <%= f.hidden_field :size %>
  <%= f.input :modified %>

  <%= f.hidden_field :redirect, value: params[:redirect]%>
<% end %>

