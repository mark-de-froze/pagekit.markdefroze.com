<%= simple_form_for @site_widget, html: {class: 'uk-form-stacked'}, wrapper: :form do |f| %>
  <legend class="uk-legend">
    <%= t('.'+action_name+'.title', default: action_name.titleize + ' Widget')%>
    <div class="uk-align-right">
      <%= yield :links %>
      <%= f.button :submit, class: 'uk-button uk-button-primary' %>
    </div>
  </legend>
  <%= f.error_notification %>

  <div class="uk-width-1-1" uk-grid>
    <div class="uk-width-3-4">
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <%= f.input :content %>
    </div>
    <div class="uk-width-1-4">
      <%= f.input :api_key, collection: @api_keys, value_method: :api_key, prompt: :translate, input_html: {class: 'uk-select'}  %>
      <%= f.input :section %>
      <%= f.input :status, collection: @site_widget.statuses, prompt: :translate, input_html: {class: 'uk-select'} %>
      <%= f.input :position, collection: @site_widget.positions, prompt: :translate, input_html: {class: 'uk-select'} %>
    </div>
  </div>

<% end %>

